               HorizontalOptions="Center" 
               HeightRequest="150" />

        <Label Text="Nombre: Antonio Paez Vangel" 
               HorizontalOptions="Center" 
               FontSize="18" 
               TextColor="#333" />
        <Label Text="Email: antonio@gmail.com" 
               HorizontalOptions="Center" 
               FontSize="18" 
               TextColor="#333" />
